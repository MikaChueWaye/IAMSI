{% if product is not null %}
    <div id="product" class="card item">
        <div class="card-image">
            <img src="{{ product.imageProduct ? asset("img/products/uploads/" ~ product.imageProduct ~ "" ) : asset("img/products/undefined.png") }}"
                 alt="product picture">
        </div>
        <div class="card-info">
            <button class="delete-product" data-product-id={{ product.id }}>X</button>
            <p>{{ product.name }}</p>
            <p class="price-tag">{{ product.price }} â‚¬</p>
        </div>
    </div>
    {% else %}
        <div class="card item">
            <div class="card-image">
                <img src="{{ asset("img/products/undefined.png") }}"
                     alt="product picture">
            </div>
            <div class="card-info">
                <p>Ce produit n'est pas disponible</p>
            </div>
        </div>
{% endif %}

