{% extends "base.html.twig" %}
{% block title %}Shopping Cart{% endblock %}
{% block css %}<link rel="stylesheet" type="text/css" href="{{ asset("css/shoppingCart.css") }}">{% endblock %}
{% block main %}
<main>
    <div id="shopping-cart">
        <fieldset>
            <legend>Panier :</legend>
            <div id="shopping-cart-content">
                <table>
                    <tr class="card">
                        <td></td>
                        <td>Nom</td>
                        <td>Description</td>
                        <td>Prix</td>
                        <td>Qtte</td>
                    </tr>
                    <tr class="card">
                        <td><img src="{{ asset("img/products/undefined.png") }}" alt="product-image"></td>
                        <td>banane</td>
                        <td>c'est bon</td>
                        <td>trop cher</td>
                        <td><label>
                                <input type="number" max="999" min="1" value="5">
                            </label></td>
                    </tr>
                    <tr class="card">
                        <td><img src="{{ asset("img/products/undefined.png") }}" alt="product-image"></td>
                        <td>patate</td>
                        <td>c'est bon</td>
                        <td>trop cher</td>
                        <td><label>
                                <input type="number" max="999" min="1" value="5">
                            </label></td>
                    </tr>
                    <tr class="card">
                        <td><img src="{{ asset("img/products/undefined.png") }}" alt="product-image"></td>
                        <td>tomate</td>
                        <td>c'est bon</td>
                        <td>trop cher</td>
                        <td><label>
                                <input type="number" max="999" min="1" value="5">
                            </label></td>
                    </tr>
                </table>

            </div>
            <div id="fieldset-background"></div>
        </fieldset><fieldset>
            <legend>Récapitulatif de la commande :</legend>
            <div id="shopping-cart-receipt">
                <p style="margin-bottom: 5px">Articles:</p>
                <div class="receipt-item">
                    <div>- Banane</div>
                    <div class="dot"></div>
                    <div>50€</div>
                </div>
                <div class="receipt-item">
                    <div>- Patate</div>
                    <div class="dot"></div>
                    <div>50€</div>
                </div>
                <div class="receipt-item">
                    <div>- Tomate</div>
                    <div class="dot"></div>
                    <div>50€</div>
                </div><br>
                <div class="line"></div><br>
                <div class="receipt-item">
                    <div style="white-space: nowrap">Montant total:</div>
                    <div class="dot"></div>
                    <div>150€</div>
                </div>
                <p style="font-size: x-small">Le total de la commande inclut la TVA</p>
            </div>
            <div id="fieldset-background" class="card"></div>
        </fieldset>
    </div>

</main>
{% endblock %}
